{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "outDir": "dist",
    "module": "CommonJS",
    "declarationMap": true,
    "useUnknownInCatchVariables": false
  }
}
